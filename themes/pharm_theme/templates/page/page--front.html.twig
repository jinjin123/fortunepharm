{{ attach_library('pharm_theme/homepage') }}
<div class="layout-container homepage">

  <header id="header" class="navbar">
    <div class="container-fluid">
      <div class="container-fluid-40">
        {{ page.header }}
      </div>
    </div>
  </header>

  <div id="wrapper">
  <main class="body" role="main">
    <div class="banner">
      {{ page.banner }}
    </div>
    <div class="container-fluid">
      <div class="desktop-main main-wrapper hidden-xs">
        <div class="col-sm-9-4 row-sm-9-4">
          {{ page.home_page_top_one }}
        </div>
        <div class="col-sm-9-3 row-sm-9-4">
          {{ page.home_page_top_two }}
        </div>
        <div class="col-sm-9-2 row-sm-9-4">
          {{ page.home_page_top_three }}
        </div>
        <div class="col-sm-9-3 row-sm-9-1">
          {{ page.home_page_bottom_one }}
        </div>
        <div class="col-sm-9-3 row-sm-9-1">
          {{ page.home_page_bottom_two }}
        </div>
        <div class="col-sm-9-3 row-sm-9-1">
          {{ page.home_page_bottom_three }}
        </div>
      </div>
      {# Mobile #}
      <div class="mobile-main main-wrapper visible-xs">
        <div class="col-xs-12 row-xs-12 nopadding">
           {{ drupal_view('homepage_slider', 'block_1') }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 10) }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 11) }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 12) }}
        </div>
        <div class="col-xs-8 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 13) }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 14) }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 15) }}
        </div>
        <div class="col-xs-8 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 16) }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 17) }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 18) }}
        </div>
        <div class="col-xs-4 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 19) }}
        </div>
        <div class="col-xs-12 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 20) }}
        </div>
        <div class="col-xs-12 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 21) }}
        </div>
        <div class="col-xs-12 row-xs-4 nopadding">
          {{ drupal_entity('block_content', 22) }}
        </div>
      </div>
      {# Mobile #}
    </div>
  </main>

  <footer class="footer" role="contentinfo" id="footer">
    <div class="container-fluid">
      <div class="container-fluid-40">
        {{ page.footer }}
      </div>
    </div>
  </footer>
  </div>
</div>
